    <div class="container-narrow">
        <div class="page-header" style="height:100px;">


            <div class="pull-right">
                @Html.Partial("_LoginPartial")
            </div>
            <div class="pull-right" style="clear:both;">
                <ul id="menu" class="nav nav-pills">
                    <li class="@Url.MakeNavBarActive("AccessControl")">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                            Access Control<span class="caret"></span>
                            <ul class="dropdown-menu">
                                <li>
                                    @Html.ActionLink("User List", "UserList", "AccessControl")
                                </li>
                                <li>
                                    @Html.ActionLink("Create User", "CreateUser", "AccessControl")
                                </li>
                            </ul>

                        </a>
                    </li>
                    <li class="@Url.MakeNavBarActive("Order","List")">@Html.ActionLink("Order List", "List", "Order")</li>
                    <li class="@Url.MakeNavBarActive("JobItem","ShipOut")">@Html.ActionLink("Ship Out", "ShipOut", "JobItem")</li>
                    <li class="@Url.MakeNavBarActive("Item","List")">@Html.ActionLink("SKU List", "List", "Item")</li>
                    <li class="@Url.MakeNavBarActive("JobItem","List")">@Html.ActionLink("Job Item List", "List", "JobItem")</li>
                </ul>

            </div>
        </div>
        <div class="container body-content">
            @Html.Partial("Notifications")
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
            </footer>
        </div>

    </div>
    @RenderSection("scripts", required: false)
</body>
</html>
