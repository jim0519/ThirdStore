@{
    //success messages
    var successMessages = new List<string>();
    if (TempData[string.Format("ThirdStore.notifications.{0}", NotifyType.Success)] != null)
    {
        successMessages.AddRange(TempData[string.Format("ThirdStore.notifications.{0}", NotifyType.Success)] as IList<string>);
    }
    if (ViewData[string.Format("ThirdStore.notifications.{0}", NotifyType.Success)] != null)
    {
        successMessages.AddRange(ViewData[string.Format("ThirdStore.notifications.{0}", NotifyType.Success)] as IList<string>);
    }


    //error messages
    var errorMessages = new List<string>();
    if (TempData[string.Format("ThirdStore.notifications.{0}", NotifyType.Error)] != null)
    {
        errorMessages.AddRange(TempData[string.Format("ThirdStore.notifications.{0}", NotifyType.Error)] as IList<string>);
    }
    if (ViewData[string.Format("ThirdStore.notifications.{0}", NotifyType.Error)] != null)
    {
        errorMessages.AddRange(ViewData[string.Format("ThirdStore.notifications.{0}", NotifyType.Error)] as IList<string>);
    }
}
@foreach (var message in successMessages)
{
    <div style="font-size: xx-large;color: green;border: green solid 5px;">
        @message
    </div>
}
@foreach (var message in errorMessages)
{
    <div style="font-size: xx-large;color: red;border: red solid 5px;">
        @message
    </div>
}